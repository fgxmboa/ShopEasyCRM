@model ShopEasyCRM.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<div class="container my-5">
    <div class="card shadow-lg border-danger mx-auto" style="max-width: 700px;">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="fa-solid fa-box-circle-xmark fa-lg me-3"></i>
            <h3 class="mb-0 fw-bold">Eliminar producto</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>¿Desea eliminar este producto?</h5>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-semibold">Código de barras:</dt>
                <dd class="col-sm-8">@Model.CodigoBarras</dd>

                <dt class="col-sm-4 fw-semibold">Nombre:</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4 fw-semibold">Descripción:</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4 fw-semibold">Precio:</dt>
                <dd class="col-sm-8">@Model.Precio?.ToString("C") ?? "-"</dd>

                <dt class="col-sm-4 fw-semibold">Categoría:</dt>
                <dd class="col-sm-8">@Model.Categoria</dd>

                <dt class="col-sm-4 fw-semibold">Stock:</dt>
                <dd class="col-sm-8">@Model.Stock</dd>

                <dt class="col-sm-4 fw-semibold">Estado:</dt>
                <dd class="col-sm-8">@(Model.Estado == "true" ? "Activo" : "Inactivo")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdProducto" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg shadow-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver a productos
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

