@{
    ViewData["Title"] = "Shop Easy";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<div class="home-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg text-center p-5 border-0 rounded-4" style="max-width: 700px; width: 100%;">
        <div class="card-body">
            <div class="mb-4">
                <i class="fa-solid fa-store fa-4x text-primary mb-3"></i>
                <h1 class="fw-bold text-primary mb-2">Bienvenido a <span class="text-gradient">Shop Easy</span></h1>
            </div>

            <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
                <a href="/Productos/Index" class="btn btn-primary btn-lg px-4 shadow-sm d-flex align-items-center gap-2">
                    <i class="fa-solid fa-boxes-stacked"></i> Productos
                </a>
                <a href="/Personas/Index" class="btn btn-info btn-lg px-4 shadow-sm d-flex align-items-center gap-2">
                    <i class="fa-solid fa-users"></i> Personas
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* === Fondo con degradado celeste === */
    body {
        background: linear-gradient(135deg, #2196f3, #6eb8f5, #9acef8);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    /* === Tarjeta principal === */
    .card {
        background: #ffffff;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    /* === Título con degradado === */
    .text-gradient {
        background: linear-gradient(90deg, #2196f3, #6eb8f5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* === Botones === */
    .btn {
        font-weight: 600;
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #2196f3;
    }

    .btn-primary:hover {
        background-color: #1976d2;
        transform: translateY(-2px);
    }

    .btn-info {
        background-color: #6eb8f5;
        color: white;
    }

    .btn-info:hover {
        background-color: #4fa8f3;
        transform: translateY(-2px);
    }

    /* === Ícono principal === */
    .fa-store {
        color: #2196f3;
        text-shadow: 0 2px 8px rgba(33, 150, 243, 0.3);
    }

    /* === Responsividad === */
    @@media (max-width: 576px) {
        .card-body {
            padding: 2rem 1rem;
        }

        .btn {
            width: 100%;
        }
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
