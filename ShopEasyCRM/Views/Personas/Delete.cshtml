@model ShopEasyCRM.Models.Persona

@{
    ViewData["Title"] = "Eliminar persona";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<div class="container my-5">
    <div class="card shadow-lg border-danger mx-auto" style="max-width: 700px;">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="fa-solid fa-user-xmark fa-lg me-3"></i>
            <h3 class="mb-0 fw-bold">Eliminar persona</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning"><i class="fa-solid fa-triangle-exclamation me-2"></i>¿Seguro(a) que desea eliminar esta persona?</h5>
            <hr />
            <div class="mb-4">
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre @Model.Apellido1 @Model.Apellido2</dd>

                    <dt class="col-sm-4 fw-semibold">Correo Electrónico:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 fw-semibold">Teléfono:</dt>
                    <dd class="col-sm-8">@Model.Telefono</dd>

                    <dt class="col-sm-4 fw-semibold">Dirección:</dt>
                    <dd class="col-sm-8">@Model.Direccion</dd>

                    <dt class="col-sm-4 fw-semibold">Fecha de Nacimiento:</dt>
                    <dd class="col-sm-8">@(Model.FechaNacimiento?.ToShortDateString() ?? "")</dd>

                    <dt class="col-sm-4 fw-semibold">Estado:</dt>
                    <dd class="col-sm-8">@Model.Estado</dd>

                    <dt class="col-sm-4 fw-semibold">Provincia:</dt>
                    <dd class="col-sm-8">@Model.Provincia?.Nombre ?? "No asignada"</dd>

                    <dt class="col-sm-4 fw-semibold">Rol:</dt>
                    <dd class="col-sm-8">@Model.Rol?.Nombre ?? "No asignado"</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="NumeroCedula" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg shadow-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm"><i class="fa-solid fa-arrow-left me-2"></i>Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

