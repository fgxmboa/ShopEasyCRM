@model ShopEasyCRM.Models.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<div class="container my-5">
    <div class="card shadow-lg border-warning mx-auto" style="max-width: 700px;">
        <div class="card-header bg-warning text-white d-flex align-items-center">
            <i class="fa-solid fa-user-pen fa-lg me-3"></i>
            <h3 class="mb-0 fw-bold">Editar persona existente</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NumeroCedula" class="form-label">Número de Cédula</label>
                        <input asp-for="NumeroCedula" class="form-control" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellido1" class="form-label">Primer Apellido</label>
                        <input asp-for="Apellido1" class="form-control" />
                        <span asp-validation-for="Apellido1" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellido2" class="form-label">Segundo Apellido</label>
                        <input asp-for="Apellido2" class="form-control" />
                        <span asp-validation-for="Apellido2" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label">Celular</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Direccion" class="form-label">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProvinciaId" class="form-label">Provincia</label>
                        <select asp-for="ProvinciaId" class="form-select" asp-items="ViewBag.ProvinciaId">
                            <option value="" disabled>-- Seleccione una provincia --</option>
                        </select>
                        <span asp-validation-for="ProvinciaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RolId" class="form-label">Rol</label>
                        <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId">
                            <option value="" disabled>-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="" disabled>-- Seleccione el estado --</option>
                            <option value="true" selected="@Model.Estado">Activo</option>
                            <option value="false" selected="@(!Model.Estado)">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <input type="submit" value="Guardar cambios" class="btn btn-warning btn-lg shadow-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm"><i class="fa-solid fa-arrow-left me-2"></i>Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

