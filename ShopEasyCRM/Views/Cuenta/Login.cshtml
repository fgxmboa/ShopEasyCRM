@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shop Easy</title>

    <!-- Font Awesome para el ícono de casita -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        /* ===== Reset y tipografía ===== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #def7ff, #6eb8f5);
        }

        /* ===== Contenedor principal ===== */
        .login-container {
            background-color: #ffffff;
            padding: 40px 35px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 90%;
            max-width: 420px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

        /* ===== Encabezado ===== */
        .brand-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
        }

            .brand-header i {
                color: #2196f3;
                margin-bottom: 10px;
            }

            .brand-header h1 {
                font-size: 32px;
                font-weight: 800;
                color: #2196f3;
                margin-bottom: 8px;
            }

        /* ===== Campos del formulario ===== */
        form input {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 20px;
            border: 1px solid #c3e3fd;
            border-radius: 10px;
            font-size: 16px;
            background-color: #f9fcff;
            transition: all 0.3s ease;
        }

            form input:focus {
                border-color: #2196f3;
                background-color: #ffffff;
                box-shadow: 0 0 8px rgba(33, 150, 243, 0.3);
                outline: none;
            }

        /* ===== Botón ===== */
        form button {
            width: 100%;
            padding: 12px;
            background-color: #2196f3;
            border: none;
            color: white;
            font-size: 18px;
            font-weight: 600;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            form button:hover {
                background-color: #1976d2;
                transform: translateY(-2px);
            }

        /* ===== Mensaje de error ===== */
        .error-message {
            color: #d32f2f;
            margin-top: 15px;
            font-size: 14px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand-header">
            <i class="fa-solid fa-store fa-4x mb-3"></i>
            <h1>Shop Easy</h1>
        </div>

        <form method="post">
            <input type="email" name="email" placeholder="Correo electrónico" required />
            <input type="password" name="password" placeholder="Contraseña" required />
            <button type="submit">Iniciar Sesión</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }
    </div>
</body>
</html>
